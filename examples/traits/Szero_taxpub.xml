                        <tp:descriptive-statement-part content-type="traitValue"
                        specific-use="quantative"><tp:descriptive-statement-part
                            content-type="minValue" unit="mm"
                            >1.37</tp:descriptive-statement-part>-<tp:descriptive-statement-part
                            content-type="maxValue" unit="mm">1.54</tp:descriptive-statement-part>
                            (<tp:descriptive-statement-part content-type="mean" unit="mm"
                            >1.46</tp:descriptive-statement-part>) <tp:descriptive-statement-part
